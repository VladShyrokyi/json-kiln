{
  "name": "json-kiln",
  "version": "0.1.0",
  "description": "Streaming JSON array generator by target size (bytes). Exact-size files, per-item min size, deterministic, EJSON. No OOM.",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/VladShyrokyi/json-kiln.git"
  },
  "homepage": "https://github.com/VladShyrokyi/json-kiln",
  "bugs": {
    "url": "https://github.com/VladShyrokyi/json-kiln/issues"
  },
  "author": "Vladyslav Shyrokyi <shyrokyi.vladislav@gmail.com>",
  "keywords": [
    "json",
    "generator",
    "streaming",
    "big-data",
    "large-files",
    "performance",
    "load-testing",
    "deterministic",
    "ejson",
    "mongodb",
    "cli",
    "nodejs",
    "typescript",
    "docker"
  ],
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "json-kiln": "./dist/cli.js",
    "jk": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx src/cli.ts --help",
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest run",
    "prepublishOnly": "npm run build && npm run test"
  },
  "devDependencies": {
    "@types/node": "^20.19.23",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "tsdown": "^0.15.10",
    "tsx": "^4.20.6",
    "vitest": "^4.0.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
